# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Uploader.index
POST        /                        controllers.Uploader.upload()

GET         /uploaded/:file          controllers.Application.index(file : String)
POST        /uploaded/:file          controllers.Application.apply(file : String)

GET         /uploaded/success        controllers.Application.downloadZIP()

#GET         /javascriptRoutes        controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
